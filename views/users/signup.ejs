<% layout("layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>SignUp on NestNGo</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" placeholder="Enter the username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" placeholder="Enter the Email" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter the password" class="form-control" required>
            </div>
            <button class="btn btn-primary">SignUp</button>
        
        </form>
    </div>
</div>